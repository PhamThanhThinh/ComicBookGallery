@* giao diện *@

@page
@model ComicBookGallery.Pages.Book.IndexModel
@{
  ViewData["Title"] = "Danh sách các cuốn sách";
}
<a asp-page="Create" class="btn btn-primary mb-2">Tạo mới một cuốn sách</a>
<div class="card shadow mt-2">
  <div class="card-header">
    <h3>@ViewData["Title"]</h3>
  </div>
  <div class="card-body">
    <table class="table table-striped table-hover table-responsive">
      <thead>
        <tr>
          <th>@Html.DisplayNameFor(model => model.Books[0].Id)</th>
          <th>@Html.DisplayNameFor(model => model.Books[0].BookTitle)</th>
          <th>@Html.DisplayNameFor(model => model.Books[0].BookDescription)</th>
          <th>@Html.DisplayNameFor(model => model.Books[0].Author)</th>
          <th>Chức Năng</th>
        </tr>
      </thead>
      <tbody>
        @if (Model.Books != null && Model.Books.Any())
        {
          @foreach (var book in Model.Books)
          {
            <tr>
              <td>@Html.DisplayFor(Model => book.Id)</td>
              <td>@Html.DisplayFor(Model => book.BookTitle)</td>
              <td>@Html.DisplayFor(Model => book.BookDescription)</td>
              <td>@Html.DisplayFor(Model => book.Author)</td>
              <td>
                <a asp-page="./Delete" asp-route-id="@book.Id" class="btn btn-danger">Xóa</a>
                <a asp-page="./Edit" asp-route-id="@book.Id" class="btn btn-success">Sửa</a>
              </td>
            </tr>
          }
        }
        else
        {
          <tr>
            <td colspan="5">
              Không có dữ liệu nào để load lên
            </td>
          </tr>
        }
      </tbody>
    </table>
  </div>

</div>